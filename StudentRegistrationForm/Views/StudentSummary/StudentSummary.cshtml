        </tr>
    </table>
    <script type="text/javascript" src="~/Scripts/Scripts/StudentSummary.js"></script>
    <script>


        function Logout() {
            localStorage.clear();
            CacheStorage.clear;
            sessionStorage.clear;
            LogoutController().then((result) => {
                window.location = result.url;
            })
        }
        function LogoutController() {
            console.log("logout");
            return fetch("/User/Logout", {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => { return response.json(); })
                .catch((error) => console.log(error))
        }
    </script>
</body>
</html>

